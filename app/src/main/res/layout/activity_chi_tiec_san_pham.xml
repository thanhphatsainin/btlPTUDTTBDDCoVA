<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.ChiTiecSanPhamActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChiTietSanPham"
        android:background="#5DB5C1"
        app:titleTextColor="#ecfc08"
        app:title="Chi Tiếc Sản Phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imgAnhChiTietSanPham"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#FF9800"
                android:text="Chi tiếc sản phẩm"
                android:textSize="20sp"
                android:id="@+id/txtTenChiTietSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txtGiaChiTietSanPham"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="#9e0e3caf"
                android:text="Gía sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:background="@drawable/spinner"
                android:layout_marginTop="10dp"
                android:id="@+id/spinnerSoLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <ImageButton
                android:background="@drawable/borderview_cart"
                android:scaleType="fitXY"
                android:src="@drawable/cartss"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#04ff00"
                android:id="@+id/btnGioHangChiTietSanPham"
                android:layout_marginTop="5dp"
                android:text="Thêm Gỉo Hàng"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtMota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mô Tả Sản Phẩm"
            android:textColor="#97be0c"
            android:textSize="20sp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:id="@+id/txtMoTaChiTietSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>