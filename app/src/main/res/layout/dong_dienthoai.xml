<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/imgDienThoai"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTenDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện Thoại"
            android:textColor="#E40707"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtGiaDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gía Điện Thoại"
            android:textColor="#3D48E6"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtMoTaDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mô tả"
            android:textColor="#4A4A53"
            android:textSize="16sp" />
            </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>