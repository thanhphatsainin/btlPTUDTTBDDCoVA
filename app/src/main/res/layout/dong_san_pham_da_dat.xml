<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/imgHinhDienThoaiDaDat"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout

                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTenDienThoaiDaDat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điện Thoại"
                    android:textColor="#F11212"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtSoLuongDienThoaiDaDat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số Lượng Đã Đặt"
                    android:textColor="#3A46E1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtGiaDienThoaiDaDat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền"
                    android:textColor="#51525A"
                    android:textSize="16sp" />
                </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>